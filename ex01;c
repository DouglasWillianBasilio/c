

#include <stdio.h>

int main() {
    int i;
    float num, soma = 0, media;

    for(i = 1; i <= 4; i++) {
        printf("Digite o %dº número: ", i);
        scanf("%f", &num);
        soma += num;
    }

    media = soma / 4;

    printf("A média dos números é: %.2f\n", media);

    return 0;
}
